---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro'
import Footer from '@/components/Footer.astro'

interface Props {
	title: string;
	lang: string;
	description: string;
}

const { title, lang, description } = Astro.props;
---

<Layout title={title} lang={lang} description={description} >
	<Navbar />
	<div class="dark:bg-[#1d232a] bg-white min-h-screen transition duration-800">
        <main class="lg:w-[840px] w-full px-4 lg:p-0 m-auto dark:text-[#a6adba]">
			<slot />
        </main>
	</div>
	<Footer />
</Layout>

<style>
	html {
		scroll-padding-top: 104.5px
	}
</style>