---
interface Props {
  title: string;
  lang: string;
  description: string;
}

const { title, lang, description } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content=`${description}` />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Juan Luis Sanchez Pozo</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Cascadia+Code&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    </script>
  </head>
  <body class="dark:bg-dark-main bg-light-main transition duration-800">
    <slot />
    <style is:global>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
