---
import PortfolioNavbar from "@/components/PortfolioNavbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title: string;
  lang: string;
  description: string;
}

const { title, lang, description } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Juan Luis Sanchez Pozo</title>
    <meta
      property="og:image"
      content={`https://arch-fan.com/api/og?title=${title}`}
    />
    <meta
      name="twitter:image"
      content={`https://arch-fan.com/api/og?title=${title}`}
    />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    </script>
  </head>
  <body class="dark:bg-dark-main bg-light-main transition duration-500">
    <PortfolioNavbar />
    <div class="max-w-3xl w-full m-auto lg:px-0 px-4">
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    @apply dark:text-[#a6adba];
  }
</style>
