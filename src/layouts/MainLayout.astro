---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  lang: string;
  title: string;
  description: string;
}

const { lang, title, description } = Astro.props;
---

<Layout lang={lang} title={title} description={description}>
  <Navbar />
  <div class="min-h-screen relative pb-[88px]">
    <div
      class="lg:w-[840px] w-full m-auto pt-16 p-2 dark:text-dark-text text-light-text"
    >
      <slot />
    </div>
    <Footer />
  </div>
</Layout>
