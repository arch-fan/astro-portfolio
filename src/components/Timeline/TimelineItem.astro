---
import { type Experience } from "@/data/experience";
interface Props extends Experience {}

const { dateRange, job, description, company } = Astro.props;
---

<li class="mb-10 ml-4">
    <div
        class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <time
        class="mb-1 text-sm font-normal leading-none text-gray-900 dark:text-gray-500"
        >{dateRange}</time
    >
    <h3 class="mb-1 text-sm font-normal leading-none text-gray-700 dark:text-gray-500">{company}</h3>
    <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
        {job}
    </h4>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
        {description}
    </p>
</li>