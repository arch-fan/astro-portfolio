---
import type { Technology } from "@/data/technologies";
import { Icon } from "astro-icon/components";
interface Props extends Technology {}
const { tech, icon } = Astro.props;
---

<div
  class="flex flex-col gap-2 p-2 border-r border-b dark:border-dark-title border-black box-content rounded shadow hover:border-0 hover:shadow-none cursor-crosshair hover:translate-y-1"
>
  <Icon name={icon} class="w-full h-auto" />
  <p class="text-center text-xs">{tech}</p>
</div>
