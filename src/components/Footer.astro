<style>
    @keyframes spawnBar {
        0% {
            transform: scaleX(0);
        }
        100% {
            transform: scaleX(1);
        }
    }
</style>

<script>
    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("animate-[spawnBar_1s_ease-in-out]");
                entry.target.classList.remove("scale-x-0")
                observer.unobserve(entry.target);
            }
        });
    });

    const elementToAnimate = document.querySelector(
        "#spawnbar-footer",
    ) as Element;
    observer.observe(elementToAnimate);
</script>
